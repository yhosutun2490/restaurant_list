<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Restaurant-List</title>

</head>

<body>
  <!-- search bar -->
  <div class="container search-bar">
    <div class="search-bar-outer">
      <div class="search-bar-inner">
        <form action="/search/EN">
          <div class="search-title">
            <h4 class="mb-2">Search Your Restaurantï¼š</h4>
            <p>We have: {{restaurant.length}} restaurants</p>
          </div>
          <div class="input-group">
            <input type="text" name="keyword" class="form-control" placeholder="input name or category"
              aria-label="Restaurant Name..." value="{{keyword}}" aria-describedby="search-button">
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- restaurant list -->
  <div class="container mt-5">
    {{#if restaurant}}
    <div class="row">
      <div class="col-md-10 col-12 mx-auto">
        <div class="card-columns">
          {{#each restaurant}}
          <a href="/restaurants/{{this.id}}" class="text-secondary">
            <div class="card mb-3">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
              <div class="card-body p-3">
                <h6 class="card-title mb-1">{{this.name_en}}</h6>
                <div class="restaurant-category mb-1">
                  <em class="fas fa-utensils pr-2"></em>{{this.category_en}}
                </div>
                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
              </div>
            </div>
          </a>
          {{/each}}
        </div>
      </div>
    </div>
    {{else}}
    <div class="no-results">
      <h5><strong>Sorry&#x1F614;~No search results found </strong></h5>
      <h6><strong>&#10067;Possible Reasons&#10067;</strong></h6>
      <ul>
        <li>The designated restaurant name has not been registered on our website&#127807;</li>
        <li>Keywords with mixed numbers or special character&#127807;</li>
        <li>You have not entered the specified keyword&#127807;</li>
      </ul>
    </div>
    {{/if}}
  </div>
</body>

</html>